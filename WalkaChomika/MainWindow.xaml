<Window x:Class="WalkaChomika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="Width" MinWidth="600" Height="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" x:Name="tbLog" FontFamily="Lucida Console" FontSize="14" Margin="5" AcceptsReturn="True" TextAlignment="Left" IsReadOnly="True" Width="{Binding ElementName=Container,Path=ActualWidth}" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch">
            <Button Content="Następna tura" Margin="10" Click="NextTurnClick" />
        </StackPanel>

    </Grid>
</Window>
